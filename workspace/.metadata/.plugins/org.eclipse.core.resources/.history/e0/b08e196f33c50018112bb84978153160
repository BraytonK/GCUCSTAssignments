//This is a calculator that converts from Fahrenheit to Celsius then vice-versa
//Created by: Brayton Kerekffy
//Created for: GCU CST105 Project 2
import java.util.Scanner;
public class main {
    public static void main(String args[])
    {
        double fah;
        double cel;
        double resultCel;
        double resultFah;
        Scanner input = new Scanner(System.in);
        
        System.out.print("Enter a Fahrenheit temperature: ");
        fah = input.nextDouble();
        resultCel = (fah - 32)*5/9;
        
        System.out.println(fah + "f " + "is equivalent to " + resultCel + "C");
        
        System.out.print("Enter a Celsius temperature: ");
        cel = input.nextDouble();
        resultFah = cel * (9/5) + 32;
        
        System.out.println(cel + "C " + "is equivalent to " + resultFah + "F");
    }
	
}
